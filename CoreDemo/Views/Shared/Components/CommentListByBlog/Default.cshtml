@model IEnumerable<EntityLayer.Concrete.Comment>

<div class="comment-top">

    @if (Model.Count() > 0)
    {
        <h4>Yorumlar</h4>
    }
    else
    {
        <h5>Bu bloğa henüz yorum yapılmamış. İlk yorum yapan siz olun.</h5>
    }
    @foreach (var item in Model)
    {

        <div class="media">
            <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0">@item.CommentUsername</h5>
                <p>
                    <strong>@item.CommentContent</strong>
                </p>
            </div>
        </div>
    }

</div>