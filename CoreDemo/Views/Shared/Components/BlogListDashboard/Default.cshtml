@using EntityLayer.Concrete
@model List<Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Bloglarım</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Başlık </th>
                                <th> Tarih </th>
                                <th> Kategori </th>
                                <th> Detaylar </th>
                            </tr>
                        </thead>
                        <tbody>
                    @foreach (var item in Model)
                    {
                            <tr>
                                <td style="width:5%;"><img src="@item.BlogImage" class="mr-2" alt="image"></td>
                                <td>
                                    @item.BlogTittle
                                </td>
                                <td>@(((DateTime)item.BlogCreateDate).ToString("dd-MM-yyyy"))</td>
                                <td>
                                    <label class="badge badge-gradient-info">@item.Category.CategoryName</label>
                                </td>
                                <td><a href="/Blog/ReadAllBlog/@item.BlogID" class="btn-sm btn btn-inverse-dark">Detaylar</a></td>
                            </tr>
                    }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
